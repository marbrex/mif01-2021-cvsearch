<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="root" fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <BorderPane style="-fx-border-color: black; -fx-border-width: 0 2px 0 0;">
         <bottom>
            <StackPane id="search-btn" styleClass="skill-label">
               <children>
                  <Label alignment="CENTER" text="Search" />
               </children>
            </StackPane>
         </bottom>
         <top>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="addSkillField" promptText="Type a skill here" />
                  <Button fx:id="addSkillBtn" mnemonicParsing="false" text="Add skill" />
               </children>
            </HBox>
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <TilePane hgap="5.0" prefColumns="0" prefRows="0" vgap="5.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <children>
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
                  <Label styleClass="skill-label" text="Label" />
               </children>
            </TilePane>
         </center>
      </BorderPane>
   </left>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" BorderPane.alignment="CENTER">
        <content>
            <TilePane hgap="10.0" vgap="10.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="cv" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TilePane>
        </content>
      </ScrollPane>
   </center>
</BorderPane>
